<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapasActivity">

    <Button
        android:id="@+id/button_ruta"
        android:layout_width="67dp"
        android:layout_height="52dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/casa"
        android:backgroundTint="#52bd2c"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <Button
        android:id="@+id/Mapa_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="108dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Ampliacion-Preferida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Mapa_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="108dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Tulancingo-La villita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mapa_1" />

    <Button
        android:id="@+id/Mapa_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="164dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Tulancingo-Cuautepec"
        app:layout_constraintBottom_toTopOf="@+id/button_ruta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mapa_2" />
</androidx.constraintlayout.widget.ConstraintLayout>